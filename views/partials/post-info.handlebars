<article class="post">
  <div class="title">
    <a href="**" target="_blank">{{title}}</a>
    <p>{{body}}</p>
  </div>
  <div class="meta">
    by {{user.dataValues.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>

