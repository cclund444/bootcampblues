<article class="card" style="background-color: #18095C">
  <a href="/post/{{id}}" class="stretched-link"></a>
  <div class="card-header">
    <h2>{{title}}</h2>
    <span>Posted by {{user.username}} on {{format_date created_at}}</span>
  </div>
  <div class="card-body">
    {{body}}
  </div>
</article>